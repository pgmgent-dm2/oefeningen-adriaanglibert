{% extends "_layouts/_title-layout.twig" %}

{% set title = entry.title %}

{% block content %}
	{% include "_components/_content.twig" with {
        content: entry.richText
    } %}
{% endblock %}

{% block leftSide %}
	<img src="{{entry.image.one().getUrl('banner')}}"/>
{% endblock %}

{% block rightSide %}
	{% for cat in entry.categorySelector.all() %}
		{{ cat.title }}
		<img src="{{ cat.image.one().getUrl('thumbnail') }}"/>
	{% endfor %}
{% endblock %}
